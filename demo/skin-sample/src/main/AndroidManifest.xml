<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ximsfei.skin.sample">

    <application
        android:name="com.ximsfei.skin.sample.SkinApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ximsfei.skin.sample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ximsfei.skin.sample.activities.ColorPickerActivity" />

        <!-- components activity -->
        <activity android:name="com.ximsfei.skin.sample.activities.components.TextViewActivity" />
    </application>

</manifest>